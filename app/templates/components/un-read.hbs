<div class="row message unread">
  <div class="col-xs-1">
    <div class="row">
      <div class="col-xs-2">
        <input type="checkbox"
           name="checkbox"
           checked={{message.isChecked}}
           {{action "toggleChecked"}}/>
      </div>
      <div class="col-xs-2">
        <i class="star fa fa-star-o"></i>
      </div>
    </div>
  </div>

  <div class="col-xs-11">
    <a href="#"{{action "updateMessage" on="click"}}>
      {{message.subject}}
    </a>
    {{#if messageOpen}}
    <p>{{message.body}}</p>
    {{/if}}
  </div>
</div>
